<!-- Page Header -->
<header>
  <div class="container">
    <h1>Make a Bill</h1>
  </div>
</header>
<!-- Page Body -->
<div class="main-body">
  <div class="container">
    <div class="row">
      <div class="col-sm">
        <%= form_with(url: bucks_generate_path, local: true) do |f| %>
          <div class="form-group">
            <%= label_tag(:to, "To:") %>
            <br>
            <%= text_field_tag(:to, @image_params[:to], class: "form-control") %>
          </div>

          <div class="form-group">
            <%= label_tag(:from, "From:") %>
            <br>
            <%= text_field_tag(:from, @image_params[:from], class: "form-control") %>
          </div>

          <div class="form-group">
            <%= label_tag(:for_message, "For:") %>
            <br>
            <%= text_area_tag(:for_message, @image_params[:for_message], maxlength: 275, size: 400, rows: 8, class: "form-control") %>
          </div>

          <%= radio_button_tag(:buck_type, "bill", @image_params[:buck_type].in?(['bill', '', nil])) %>
          <%= label_tag(:type_bill, "Bill (1)") %>
          <%= radio_button_tag(:buck_type, "vonette", @image_params[:buck_type] == 'vonette') %>
          <%= label_tag(:type_vonette, "Vonette (5)") %>
          <br>
          <%= f.submit("Generate", :class =>"btn btn-outline-primary") %>
          <%= link_to "Clear", "?to=", class: "btn btn-outline-danger"%>
          <p><%= link_to "How to send (video)", "/how_to_share_mac.mp4" %></p>
        <% end %>
      </div>

      <div class="col-md">
        <div class="img">
          <%= image_tag("/bucks/#{@image_params[:buck_type] || "bill"}.png?#{@image_params.to_query}") %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Page Footer -->
<footer id="bottom-footer">
  <div class="container">
    <div class="made-with-love">
      Made with <span class="heart-btn">‚ù§</span> by
      <a href="?to=Shelby+Benton&for_message=Your+hard+work&buck_type=vonette">Shelby</a>
      and
      <a href="?to=Spencer+Oberstadt&for_message=Being+great+at+wasting+time%21+üï∫üêô">Spencer</a>
    </div>

    <div class="feature-request">
      <a href="https://github.com/soberstadt/bill-bucks-generator/issues"
        title="feature requests are easier to read if they are on a bill buck image">
        Issues or Feature Requests
      </a>
    </div>
  </div>
</footer>

<%= javascript_pack_tag 'generator' %>
